# SATOR Ops Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/sator
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sator
DATABASE_USER=postgres
DATABASE_PASSWORD=your-password

# =============================================================================
# Backend API
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# Frontend
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# =============================================================================
# Primary Sponsors
# =============================================================================

# Kairo AI Sec - Solana secure contract development
# Get your API key from: https://app.kairoaisec.com
# Format: kairo_sk_live_xxxxx (production) or kairo_sk_test_xxxxx (sandbox)
SATOR_KAIRO_API_KEY=kairo_sk_live_xxxxx

# LeanMCP - MCP transport layer
LEANMCP_REGISTRY_URL=

# =============================================================================
# Secondary Sponsors (Optional)
# =============================================================================

# Arize - Observability (optional)
ARIZE_API_KEY=
ARIZE_SPACE_KEY=

# Browserbase - External evidence fetch (optional)
BROWSERBASE_API_KEY=
