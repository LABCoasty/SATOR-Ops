# SATOR Ops Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/sator
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sator
DATABASE_USER=postgres
DATABASE_PASSWORD=your-password

# =============================================================================
# MongoDB Atlas (Blockchain Data Storage)
# =============================================================================
# Used for storing blockchain anchor records and full artifact data.
# Hashes are stored on-chain (Solana), full data is stored in MongoDB.

# MongoDB Atlas connection URI (required for blockchain persistence)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
SATOR_MONGODB_URI=

# MongoDB database name (default: sator_ops)
SATOR_MONGODB_DATABASE=sator_ops

# Enable MongoDB persistence for blockchain data (set to true to enable)
SATOR_ENABLE_MONGODB=false

# =============================================================================
# Backend API
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# Frontend
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# =============================================================================
# Primary Sponsors
# =============================================================================

# Kairo AI Sec - Solana secure contract development
# Get your API key from: https://app.kairoaisec.com
# Format: kairo_sk_live_xxxxx (production) or kairo_sk_test_xxxxx (sandbox)
SATOR_KAIRO_API_KEY=kairo_sk_live_xxxxx

# Solana Configuration (for blockchain anchoring)
# ============================================================================
# IMPORTANT: Solana Devnet is 100% FREE - NO CHARGES EVER
# ============================================================================
# - Devnet is a testing network with NO real monetary value
# - Test SOL is FREE from faucets (https://faucet.solana.com)
# - Devnet tokens CANNOT be transferred to mainnet
# - There are NO fees, NO charges, NO costs whatsoever
# ============================================================================

# RPC endpoint URL (default: https://api.devnet.solana.com) - FREE
SATOR_SOLANA_RPC_URL=https://api.devnet.solana.com

# Optional: Pre-funded wallet private key (Base58 encoded)
# Get FREE test SOL from: https://faucet.solana.com
# Or use CLI: solana airdrop 1 <address> --url devnet
SATOR_SOLANA_PRIVATE_KEY=

# Use simulation mode (simulates transactions without real devnet calls)
# Set to true to skip devnet entirely (useful for offline testing)
# Even with false, devnet is still 100% FREE
SATOR_SOLANA_USE_SIMULATION=false

# LeanMCP - MCP transport layer
LEANMCP_REGISTRY_URL=

# =============================================================================
# Secondary Sponsors (Optional)
# =============================================================================

# Arize - Observability (optional)
ARIZE_API_KEY=
ARIZE_SPACE_KEY=

# Browserbase - External evidence fetch (optional)
BROWSERBASE_API_KEY=
